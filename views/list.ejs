<%- include("header"); -%> 
    
    <h1 class="box" id="heading"> <%= today %> </h1>

    <div class="box">
            <%  items.forEach(item => { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkedItem" value="<%= item._id %>" onchange="this.form.submit()">
                        <p><%= item.name %></p>
                    </div>
                    <input type="hidden" name="list" value="<%= today %>">
                </form>
            <% }) %>

            <form class="item" action="/" method="post">
                <input type="text" name="listItem" placeholder="Add new item" autocomplete="off">
                <button type="submit" name="list" value=<%= today %>> + </button>
            </form>
    </div>


<%- include("footer"); -%> 
    

    